QPushButton#playbackButton {
    color: #eff0f1;
    border: 0.1em solid #76797c;
    border-radius: 0.2em;
    padding: 0.2em;
    background-color: #323232;
}

QPushButton#playbackButton:hover {
    color: #eff0f1;
    border: 0.1em solid #7e7e7e;
    background-color: #323232;
}

QPushButton#playbackButton:disabled {
    color: #454545;
    border: 0.1em solid #76797c;
    background: #323232;
}

QPushButton#playbackButton:pressed {
    color: #eff0f1;
    border: 0.1em inset #76797c;
    margin-top: 0.3em;
    background-color: #323232;
}

QPushButton#playbackButton:checked {
    color: #eff0f1;
    border: 0.1em inset #76797c;
    margin-top: 0.2em;
    background-color: #323232;
}
